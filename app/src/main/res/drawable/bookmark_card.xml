<!-- bookmark_card.xml -->
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Background shape: rectangle with rounded corners -->
    <item>
        <shape android:shape="rectangle">
            <corners android:radius="8dp" />
            <solid android:color="#80000000" /> <!-- Semi-transparent black -->
        </shape>
    </item>

    <!-- Dark or light overlay at the bottom to simulate color deepening or lightening -->
    <item android:bottom="20dp">
        <shape android:shape="rectangle">
            <solid android:color="#40000000" /> <!-- Semi-transparent black -->
        </shape>
    </item>

</layer-list>
